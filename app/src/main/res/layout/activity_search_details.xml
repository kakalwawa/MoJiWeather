<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@mipmap/back"
        android:background="#85caea"
        android:layout_margin="12dp"
        android:id="@+id/iv_back_search_details"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_search_place_name"
        android:text="北京"
        android:layout_toRightOf="@+id/iv_back_search_details"
        android:layout_margin="14dp"
        android:textSize="20sp"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_back_search_details"
        android:id="@+id/list_view_search_details"
        />

</RelativeLayout>